<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guestaccount.scoutingapp2018.Autonomous">

    <Button
        android:id="@+id/baseline_yes2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/level_two"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/baseline_no"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/notes_auto"
        android:layout_width="135dp"
        android:layout_height="46dp"
        android:onClick="Notes"
        android:text="@string/notes"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/teleop_auto"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/teleop_auto"
        android:layout_width="135dp"
        android:layout_height="46dp"
        android:onClick="Teleop"
        android:text="@string/tele_op"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@id/Sandstorm"
        app:layout_constraintEnd_toStartOf="@+id/notes_auto"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <TextView
        android:id="@+id/scale_auto_entry"
        android:layout_width="175dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:text="@string/scale_auto"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scale_auto" />

    <TextView
        android:id="@+id/scale_auto"
        android:layout_width="275dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:text="@string/scale_cubes"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teleop_auto" />

    <Button
        android:id="@+id/scale_auto_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:text="@string/decrease_value"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/scale_auto_entry"
        app:layout_constraintEnd_toStartOf="@+id/scale_auto_entry"
        app:layout_constraintLeft_toLeftOf="parent" android:layout_marginStart="16dp"/>

    <Button
        android:id="@+id/scale_auto_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:text="@string/increase_value"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/scale_auto_entry"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/scale_auto_entry" android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/switch_auto_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@string/decrease_value"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/switch_tele_entry"
        app:layout_constraintLeft_toLeftOf="parent" android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/switch_auto_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="@string/increase_value"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/switch_tele_entry"
        app:layout_constraintRight_toRightOf="parent" android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/deliver_auto_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@string/decrease_value"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/deliver_auto_entry"
        app:layout_constraintLeft_toLeftOf="parent" android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/deliver_auto_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="@string/increase_value"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/deliver_auto_entry"
        app:layout_constraintRight_toRightOf="parent" android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/switch_auto"
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:layout_marginTop="36dp"
        android:text="@string/switch_cubes"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/scale_auto_entry"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/scale_auto_entry"
        app:layout_constraintTop_toBottomOf="@+id/scale_auto_entry" />

    <TextView
        android:id="@+id/switch_tele_entry"
        android:layout_width="175dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:text="@string/switch_auto"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_auto" />

    <TextView
        android:id="@+id/deliver_auto"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="36dp"
        android:text="@string/deliver_cubes"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_tele_entry" />

    <TextView
        android:id="@+id/deliver_auto_entry"
        android:layout_width="175dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:text="@string/delivered_auto"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deliver_auto" />

    <Button
        android:id="@+id/baseline_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/stayed_still"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/baseline_yes"
        app:layout_constraintTop_toBottomOf="@+id/Habitat" />

    <Button
        android:id="@+id/baseline_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/level_one"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/baseline_no"
        app:layout_constraintEnd_toStartOf="@+id/baseline_yes2" />

    <TextView
        android:id="@+id/Habitat"
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:text="@string/habitat"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deliver_auto_entry" />

    <TextView
        android:id="@+id/Sandstorm"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:text="@string/Sandstorm"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/teleop_auto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
